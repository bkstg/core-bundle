{% trans_default_domain 'BkstgCoreBundle' %}
<a{% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    <span class="pull-right">
        {% if app.request.get('sort') == key %}
            {% if app.request.get('direction') == 'desc' %}
                <i class="fa fa-sort-desc" style="color: #000;"></i>
            {% else %}
                <i class="fa fa-sort-asc" style="color: #000;"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort" style="color: #d2d6de;"></i>
        {% endif %}
    </span>
    {{ title }}
</a>
