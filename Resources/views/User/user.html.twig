{% extends 'BkstgCoreBundle::layout.html.twig' %}

{% block title %}{{ user.firstname }} {{ user.lastname }}'s profile{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-3">
      <img class="img-thumbnail" src="{{ user.profileimageurl }}" alt="{{ user.username }}'s profile image" border="0" />
    </div>
    <div class="col-md-9">
      {% if app.user.id == user.id %}
        <a class="btn btn-default" href="{{ url('bkstg_user_edit_profile_user', { 'user': user.id}) }}">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit my profile
        </a>
      {% endif %}
      <h4>First name <small>{{ user.firstname }}</small></h4>
      <h4>Last name <small>{{ user.lastname }}</small></h4>
      <h4>Email address <small><a href="mailto:{{ user.email }}">{{ user.email }}</a></small></h4>
      {% if user.phonehome %}
        <h4>Home phone <small><a href="tel:{{ user.phonehome }}">{{ user.phonehome }}</a></small></h4>
      {% endif %}
      {% if user.phonemobile %}
        <h4>Mobile phone <small><a href="tel:{{ user.phonemobile }}">{{ user.phonemobile }}</a></small></h4>
      {% endif %}
      <h4>Roles</h4>
      <ul>
        {% for position in user.positions %}
          <li><strong>{{ position.role }}</strong> ({{ position.designation }})</li>
         {% else %}
          <li>No roles for this user</li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
