{% extends '@BkstgCore/layout.html.twig' %}
{% set page_title = production.name %}
{% block content %}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      {% media production.image, 'big' %}
      {{ production.description|raw }}
    </div>
    <div class="col-md-4">
      {{ sonata_block_render_event('bkstg.notification.production_timeline', {'production': production}) }}
    </div>
  </div>
</div>

{% endblock %}
