{% extends '@BkstgCore/Layout/1-col-12.html.twig' %}
{% set page_title = 'Please Login'|trans %}

{% block content %}
  <form action="{{ path('bkstg_security_login') }}" method="post">
    <div class="form-group">
      <label for="username">{{ 'Username'|trans }}</label>
      <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
    </div>

    <div class="form-group">
      <label for="password">{{ 'Password'|trans }}</label>
      <input type="password" id="password" class="form-control" name="_password" />
    </div>

    <div class="form-group">
      <input type="checkbox" id="remember_me" name="_remember_me" checked />
      <label for="remember_me">{{ 'Keep me logged in'|trans }}</label>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="form-group">
      <button class="btn btn-primary" type="submit">{{ 'Login'|trans }}</button>
    </div>
  </form>
{% endblock %}
