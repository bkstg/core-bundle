{% trans_default_domain 'BkstgCoreBundle' %}
{% if user.image is defined and user.image is not empty %}
  {% thumbnail user.image, 'square' with { 'width': width|default(''), 'height': height|default(''), 'class': 'img-fluid rounded-circle' } %}
{% else %}
  <img src="https://www.gravatar.com/avatar/{{ md5(user.email) }}?d=identicon" width="{{ width|default('') }}" height="{{ height|default('') }}" class="img-fluid rounded-circle" />
{% endif %}
